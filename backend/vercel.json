{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/index.js",
      "use": "@vercel/node",
      "config": { "maxDuration": 30 }
    },
    {
      "src": "backend/dist/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/api/index.js" },
    { "src": "/assets/(.*)", "dest": "backend/dist/assets/$1" },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot|json|wasm))",
      "dest": "backend/dist/$1"
    },
    { "src": "/(.*)", "dest": "backend/dist/index.html" }
  ]
}
