{
  "version": 2,
  "buildCommand": "cd backend && npm install",
  "outputDirectory": "backend",
  "builds": [
    {
      "src": "backend/src/api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "backend/dist/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/src/api/index.js" },
    { "src": "/assets/(.*)", "dest": "backend/dist/assets/$1" },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot|json|wasm))",
      "dest": "backend/dist/$1"
    },
    { "src": "/(.*)", "dest": "backend/dist/index.html" }
  ],
  "functions": {
    "backend/src/api/index.js": {
      "maxDuration": 30
    }
  }
}
